<Window x:Class="ADP2_FLIGHTGEAR.View.DataInvestigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADP2_FLIGHTGEAR.View"
        mc:Ignorable="d"
        Title="DataInvestigation" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="629*"/>
            <ColumnDefinition Width="166*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="canGraph" Background="LightSteelBlue" Width="250" Height="150" Margin="44,55,334,216">
            <TextBlock x:Name="text_x" TextWrapping="Wrap" Text="times in seconds" FontWeight="Bold" FontFamily="Times New Roman" Foreground="#FF05055B" VerticalAlignment="Bottom" Canvas.Left="80" Canvas.Top="136"/>
            <TextBlock x:Name="text_y" TextWrapping="Wrap" Text="values" Canvas.Left="-8" Canvas.Top="62" RenderTransformOrigin="0.5,0.5" FontFamily="Times New Roman" Foreground="#FF05055B" VerticalAlignment="Top" FontWeight="Bold">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
        <Label FontWeight="Bold">Choose value</Label>

        <StackPanel Name ="valueRadioButtons" Margin="562,55,0,168" HorizontalAlignment="Left" Width="194" Grid.ColumnSpan="2">
            <RadioButton >aileron</RadioButton>
            <RadioButton >elevator</RadioButton>
            <RadioButton >rudder</RadioButton>
            <RadioButton >flaps</RadioButton>
            <RadioButton >slats</RadioButton>
        </StackPanel>
        <Button x:Name="chosenValue" Content="Change value" Margin="562,182,138,216" Grid.ColumnSpan="2" Click="Change_Value"/>

    </Grid>
</Window>
